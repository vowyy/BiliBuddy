<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devise_errormes' %>


      <div class="form-group">
        <%= f.text_field :name, placeholder: "your name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autocomplete: "email", placeholder: "mail address", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :gender, "gender" %><br />
        <%= f.select :gender, Foreigner.genders.keys, prompt: "select gender", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :j_l, "japanese level" %><br />
        <%= f.select :j_l, Foreigner.j_ls.keys, prompt: "select japanese level", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :nation_id, "select your nationality" %><br />
        <%= f.collection_select :nation_id, Nation.all, :id, :name, prompt: "Your nationality" %>
      </div>

      <div class="form-group">
        <%= f.label :intro, "Introduction" %><br />
        <%= f.text_field :intro, placeholder: "your introduction", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :birthday, "date of birthe" %><br />
        <%= raw sprintf( f.date_select(:birthday, use_month_numbers: true,  start_year: 2000, end_year: 1950, include_blank: true, class: "form-control", date_separator: '%s'), 'year ', 'month ') + 'day' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="actions">
        <%= f.submit "update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

