<div class="container py-5 text-center">
  <div class="row">
    <div class="col-xl-6 col-lg-7 col-md-9 col-11 bg-white mx-auto py-4 px-5" style="filter:drop-shadow(2px 2px 3px rgba(0,0,0,0.3));border-radius:10px;">
      <h2 class="font-weight-bold mt-3 border-bottom border-darkorange pb-4">パスワードの再発行</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :patch, html: { class: "mt-5 sign_form" }) do |f| %>
        <%= render 'shared/devise_errormes', object: f.object %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group mb-2">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "新しいパスワード", class: "form-control mx-auto mb-4", style: "width:300px;height:50px;" %>
        </div>

        <div class="form-group mb-4">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "確認用パスワード", class: "form-control mx-auto mb-5", style: "width:300px;height:50px;" %>
        </div>

        <div class="actions mb-5">
          <%= f.submit "パスワードを再発行する", class: "btn btn-darkorange", style: "padding:8px 40px;border-radius:5px;font-size:20px;" %>
        </div>
      <% end %>

      <%= render "japaneses/shared/links" %>
    </div>
  </div>
</div>
