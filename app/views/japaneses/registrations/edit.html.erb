<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Edit Profile", edit_japanese_registration_path, class: "sidebar-link active" %></li>
    </ul>
    <br/>
    <%= link_to "View My Profile", japanese_path(current_japanese), class: "btn btn-default" %>
  </div>
  <div class="col-md-9 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Profile
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render 'shared/devise_errormes' %>

          <div class="form-group">
            <%= f.text_field :last_name, autofocus: true, placeholder: "姓", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.text_field :first_name, autofocus: true, placeholder: "名", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :gender, "性別" %><br />
            <%= f.select :gender, Japanese.genders.keys, autofocus: true, prompt: "性別を選んでください", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :lang_l, "英語レベル" %><br />
            <%= f.select :lang_l, Japanese.lang_ls.keys, autofocus: true, prompt: "英語レベル", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :intro, "紹介文" %><br />
            <%= f.text_area :intro, rows: 5, columns: 25, autofocus: true, placeholder: "紹介文を記入してください。", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :birthday, "生年月日" %><br />
            <%= raw sprintf( f.date_select(:birthday, use_month_numbers: true,  start_year: 2000, end_year: 1950, include_blank: true, autofocus: true, class: "form-control", date_separator: '%s'), '年 ', '月 ') + '日' %>
          </div>


          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="actions">
            <%= f.submit "送信", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
