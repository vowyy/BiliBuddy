<div class="container py-5 text-center">
  <div class="row">
    <div class="col-xl-6 col-lg-7 col-md-9 col-11 bg-white mx-auto py-4 px-5" style="filter:drop-shadow(2px 2px 3px rgba(0,0,0,0.3));border-radius:10px;">
      <h2 class="font-weight-bold mt-3 border-bottom border-darkorange pb-4"><i class="fas fa-sign-in-alt main-color mr-3"></i>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-5 sign_form" }) do |f| %>
        <%= render 'shared/devise_errormes', object: f.object %>

        <div class="form-group mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control mx-auto", style: "width:285px;" %>
        </div>

        <div class="form-group mb-5">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control mx-auto", style: "width:285px;" %>
        </div>

        <div class="actions mb-5">
          <%= f.submit "ログイン", class: "btn btn-darkorange", style: "padding:8px 60px;border-radius:5px;font-size:20px;" %>
        </div>
      <% end %>

      <%= render "japaneses/shared/links" %>
    </div>
  </div>
</div>
