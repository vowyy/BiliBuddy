<% content_for :meals do %>
  <div class="pt-3 pb-2 mx-5 h2 text-center" style="border-bottom:solid 1px darkorange;">
    <% if japanese? %>
      ミール
    <% else %>
      Meal
    <% end %>
  </div>
  <ul class="nav nav-pills pt-4" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active meal-nav font-weight-bold d-inline-block" id="pills-all-tab" data-toggle="pill" href="#pills-all" role="tab" aria-controls="pills-all" aria-selected="true">
        <% if japanese? %>
          <i class="fas fa-heart mr-1 text-danger"></i>
          <span style="font-size:13px;">お気に入り</span>
        <% else %>
          <i class="fas fa-star mr-1 text-warning"></i>
          <span class="main-blue"style="font-size:20px;">A</span>ll
        <% end %>
     </a>
    </li>

    <li class="nav-item">
      <a class="nav-link meal-nav font-weight-bold px-3 d-inline-block mr-1" id="pills-offered-tab" data-toggle="pill" href="#pills-offered" role="tab" aria-controls="pills-offered" aria-selected="false">
        <i class="far fa-envelope-open mr-1 main-blue"></i>
        <% if japanese? %>
          <span style="font-size:13px;">オファー</span>
        <% else %>
          <span class="main-blue" style="font-size:20px;margin-right:1px;">O</span>ffered
        <% end %>
      </a>
    </li>

    <li class="nav-item">
      <a class="nav-link meal-nav font-weight-bold px-3 d-inline-block" id="pills-matched-tab" data-toggle="pill" href="#pills-matched" role="tab" aria-controls="pills-matched" aria-selected="false">
        <i class="fas fa-check-double mr-1 main-blue"></i>
        <% if japanese? %>
          <span style="font-size:13px;">マッチング</span>
        <% else %>
          <span class="main-blue" style="font-size:20px;">M</span>atched
        <% end %>
      </a>
    </li>
  </ul>

  <!-- パネル部分 -->
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active mt-5"  id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">
      <% if foreigner? %>
        <% @foreigner_all_meals.each do |meal| %>
          <%= render 'shared/setting_meal', meal: meal %>
        <% end %>
      <% else %>
        <div class="row meal-small">
          <%= render @japanese_favor_meals %>
        </div>
      <% end %>
    </div>

    <div class="tab-pane fade mt-5" id="pills-offered" role="tabpanel" aria-labelledby="pills-offered-tab">
      <% if foreigner? %>
        <% @foreigner_offered_meals.each do |meal| %>
          <%= render 'shared/setting_meal', meal: meal %>
        <% end %>
      <% else %>
        <div class="row">
          <%= render @japanese_offered_meals %>
        </div>
      <% end %>
    </div>

    <div class="tab-pane fade mt-5" id="pills-matched" role="tabpanel" aria-labelledby="pills-matched-tab">
      <% if foreigner? %>
        <% @foreigner_matched_meals.each do |meal| %>
          <%= render 'shared/setting_meal', meal: meal %>
        <% end %>
      <% else %>
        <div class="row">
          <%= render @japanese_matched_meals %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
