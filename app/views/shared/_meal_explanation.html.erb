<% height = japanese? ? "469px" : "410px" %>
<div class="modal bg-grayorange mx-auto" id="how-to-read" style="height:<%= height %>;z-index:1500;width:360px;border-radius:5px;margin-top:50px;">
  <div class="modal-dialog m-0">
    <div class="meal-top pt-2 d-flex bg-white flex-column mb-1" style="width:360px;border-top-left-radius:5px;border-top-right-radius:5px;">
      <div class="text-dark mx-auto d-flex" style="position:relative;">
        <button class="close" style="position:absolute;top:-4px;left:-90px;" data-dismiss="modal">&times;</button>
        <div style="position:absolute;top:142px;right:-90px;">
          <span class="fa-stack" style="font-size:25px;filter:drop-shadow(1px 1px 2px rgba(0,0,0,0.4));">
            <i class="fas fa-circle fa-stack-2x text-white font-info"></i>
            <i class="fas fa-info fa-stack-1x text-primary"></i>
          </span>
        </div>
        <div class="text-center pt-1">
          <%= image_tag 'default.jpg', class: "home-image mb-2 circle-image", size: "120x120", style: "border:solid 1.5px white;brder-radius:5px;filter:drop-shadow(1px 1px 3px rgba(0,0,0,0.3));"%>
          <div class="mb-3 text-muted" style="font-size:15px;">
            <% if I18n.locale == :en %>
             name, age
            <% else %>
              国籍
              名前, 年齢
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="meal-bottom mx-auto py-2" style="border-radius:5px;width:300px;">
      <div class="pb-1">
        <div class="ml-2" style="padding:1px;font-size:16px;">
          <span class="fa-stack" style="font-size:15px;">
            <i class="fas fa-circle fa-stack-2x text-white"></i>
            <i class="fas fa-comment-dots fa-stack-1x meal-color"></i>
          </span>
          <span class="ml-1 mr-2 text-white">
            :
          </span>
          <% if I18n.locale == :en %>
            <span class="font-weight-bold text-white" style="font-size:11px;">
               First Language
              <span class="text-white">
               /
              </span>
              Second Language
            </span>
          <% else %>
            <span class="font-weight-bold text-white" style="font-size:15px;">
              母国語
              <span class="text-white">
               /
              </span>
              第2言語
            </span>
          <% end %>
        </div>
      </div>

      <div class="mb-1">
        <div class="ml-2" style="padding:1px;font-size:16px;">
          <span class="fa-stack" style="font-size:15px;">
            <i class="fas fa-circle fa-stack-2x text-white"></i>
            <i class="fas fa-calendar-alt fa-stack-1x meal-color"></i>
          </span>
          <span class="ml-1 mr-2 text-white">
            :
          </span>
          <span class="font-weight-bold text-white">
            <span class="text-white align-center" style="font-size:15px;">
              <%= I18n.locale == :en ? "Date" : "日付" %>
            </span>
          </span>
        </div>
      </div>

      <div class="mb-1">
        <div class="ml-2" style="padding:1px;font-size:16px;">
          <span class="fa-stack" style="font-size:15px;">
            <i class="fas fa-circle fa-stack-2x text-white"></i>
            <i class="fas fa-clock fa-stack-1x meal-color"></i>
          </span>
          <span class="ml-1 mr-2 text-white">
            :
          </span>
          <span class="font-weight-bold text-white">
            <%= I18n.locale == :en ? "Time Zone" : "時間帯" %>
          </span>
        </div>
      </div>

      <div class="mb-1">
        <div class="ml-2" style="padding:1px;font-size:16px;">
          <span class="fa-stack" style="font-size:15px;">
            <i class="fas fa-circle fa-stack-2x text-white"></i>
            <i class="fas fa-map-marker-alt fa-stack-1x meal-color"></i>
          </span>
          <span class="ml-1 mr-2 text-white">
            :
          </span>
          <span class="font-weight-bold text-white">
            <%= I18n.locale == :en ? "Location, Prefecture" : "地名,　都道府県" %>
          </span>
        </div>
      </div>

      <div class="mb-1">
        <div class="ml-1" style="padding:1px;font-size:17px;">
          <span class="fa-stack" style="font-size:15px;margin-left:4px;">
            <i class="fas fa-circle fa-stack-2x text-white"></i>
            <i class="fas fa-users fa-stack-1x meal-color"></i>
          </span>
          <span class="ml-1 mr-2 text-white">
            :
          </span>
          <span>
            <span class="font-weight-bold text-white">
              <%= I18n.locale == :en ? "Number of ppl" : "合計人数" %>
              <span class="d-inline-block" style="font-size:11px;">
                <span class="mr-2">
                  (<%= I18n.locale == :en ? "men" : "男性人数" %>
                </span>
                +
                <span class="ml-2">
                  <%= I18n.locale == :en ? "women" : "女性人数" %>)
                </span>
              </span>
            </span>
          </span>
        </div>
      </div>

      <div class="mb-1">
        <div class="ml-2" style="padding:1px;font-size:13px;">
          <span class="fa-stack" style="font-size:15px;">
            <i class="fas fa-circle fa-stack-2x text-white"></i>
            <i class="fab fa-skype fa-stack-1x meal-color"></i>
          </span>
          <span class="ml-1 mr-2 text-white">
            :
          </span>
          <span class="font-weight-bold text-white">
            <%= I18n.locale == :en ? "wanna skype after matched?" : "マッチング後、skypeを希望しますか？" %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <% if japanese? %>
    <div class="mt-1 bg-white" style="padding:5px 0;">
      <input class="btn mb-1 font-weight-bold text-white w-75 mx-auto" style="background-color:#008BBB;border-radius:7px;display:block !important;font-size:17px;filter:drop-shadow(1px 1px 3px rgba(0,0,0,0.4));" type="submit" value="予算を決めてオファーする">
    </div>
  <% end %>
</div>
