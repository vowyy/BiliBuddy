<div class="modal" id="registration_modal">
  <div class="modal-dialog py-5" style="z-index:1500;width:390px;border-radius:20px;">
    <div class="modal-content">
      <div class="modal-header p-1 border-white">
        <button class="close text-dark" style="outline:none;" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body py-4 px-3 text-center">
        <% if I18n.locale == :en %>
          <div style="font-size:15px;">
            <div style="filter:drop-shadow(3px 3px 2px rgba(0,0,0,0.5));">
              <%= button_to "Sign up as Foreigner", new_foreigner_session_path, class: "btn btn-darkorange btn-lg px-4 font-weight-bold", style: "border-radius:5px;", method: :get%>
            </div>
            <div class="my-4 h4">----------- or -----------</div>
            <div class="mb-4">
              <%= link_to "Sign up as Japanese", new_japanese_registration_path, class: "font-weight-bold text-muted h5", method: :get%>
            </div>
          </div>
        <% else %>
          <div style="font-size:13px;">
            <div style="filter:drop-shadow(3px 3px 2px rgba(0,0,0,0.5));">
              <%= button_to "日本人で登録", new_japanese_registration_path, class: "btn btn-darkorange btn-lg px-5 m-auto font-weight-bold", style: "border-radius:5px;", method: :get%>
            </div>
            <div class="my-4 h4">----------- or -----------</div>
            <div class="mb-4">
              <%= link_to "外国人で登録", new_foreigner_session_path, class: "font-weight-bold text-muted h5", method: :get%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
